<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
  <div class="col s4" id="<%= product.id %>">
    <%= link_to product_path(product), remote: true do %>
    <h4><%= product.name %></h4>
    <% end %>
      <div class="preview">
        <p><%= product.name %></p>
      </div>
      <div class="item-detail">
        <p><%= product.description %></p>
        <p><%= number_to_currency product.price %></p>
      </div>
      <%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!", min: 0 %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
      <% end %>
    </div>

  <% end %>
  </div>
</div>
